{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Basic Options */
    "target": "ESNext",                          
    "module": "ESNext",                       
    /* Strict Type-Checking Options */
    "strict": true,                          
    /* Module Resolution Options */
    "esModuleInterop": true,                 
    /* Advanced Options */
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true 
  }
}
