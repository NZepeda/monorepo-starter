{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Basic Options */
    "target": "ESNext",                          
    "module": "ESNext",
    "jsx": "react",                      
    /* Strict Type-Checking Options */
    "strict": true,                          
    /* Module Resolution Options */
    "esModuleInterop": true,     
    "moduleResolution": "Node",
    "allowJs": true,        
    /* Advanced Options */
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"]
}
